<!DOCTYPE html>
<html>
  <head>
    <title>SPUC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="/js/jquery-1.12.0.min.js"></script>
    <script src="/js/yote.js"></script>
    <style>
    
    body {
    padding:0;
    margin:0;
}
header {
    text-align: center;
    vertical-align: middle;
    background-color: #DDE;
    padding: 1em 0 1.6em 0;
}
main {
    font-size: large;
    padding: 15px;
}
.plain {
    text-decoration: none;
    color: black;
}
.err {
    display: none;
    padding: .3em;
    margin: 4px 0;
    background-color: #EFE;
    border: solid 2px #DED;
    font-family: monospace;
}
.msg {
    display: none;
    padding: .3em;
    margin: 4px 0;
    background-color: #EEF;
    border: solid 2px #DDE;
    font-family: monospace;
}
.show.err,
.show.msg {
    display: block;
}

.login {
    background-color:wheat;
    padding: .5em .5em;
    margin: .3em 0 0 0;
}
.login > span {
    vertical-align: top;
}
.logout {
    float: right;
}
.horizontal-menu li
{
    display: block;
}
ul,
li {
    margin: 0;
    padding: 0;
}
@media (max-width: 400px) { 
    body .picture {
        width: 100%;
    }
    body .picture img {
        width: 100%;
    }
    body {
//        background-color:blue;
    }
    .panel {
        border-bottom: solid 1px #AAA;
        padding: 3px 0;
    }
    .full-when-narrow,
    textarea {
        width: 100%;
    }
}
form {
    display: inline-block;
}
    
</style>
   <script>
   function msg( text, selector ) {
       selector = selector || '.msg';
       text = text || '';
       $( selector ).text( text ).toggleClass( 'has-text', text.length > 0 );
   }
   function show_err( text, selector ) {
       selector = selector || '.err';
       text = text || '';
       $( selector ).text( text ).toggleClass( 'has-text', text.length > 0 );
   }
   $().ready( function() {
                    return;
       var $body = $('body')
       $body.addClass('has-js');
       yote.init( {
            //            yoteServerURL: '/cgi-bin/yote_cgi.pl',
            yoteServerURL: '/spuc-json',
            appName: 'EPUC::App',
            token: '<: $session.get__token :>'
        });       
   } );
   </script>

  </head>
  <body>
    
    <a class="plain" href="/spuc">
      <header>
        <h1>-----&gt; <span style="text-decoration:underline; color:blue">SPUC</span> &lt;-----</h1>
      </header>
    </a>
    : if $login {
    <div class="login">
<!--      <a href="/spuc/p/userprefs"><img class="icon" src="<: $login.get_avatar.get_icon.url('80x80') :>"></a> -->
      <span>Logged in as <a href="/spuc/p/userprefs"><: $login.get_user :></a></span>
      <span class="logout"><a href="/spuc/p/logout">log out</a></span>
    </div>
    :}
        
    : my $err = $session.get_err
    : my $msg = $session.get_msg

    <span class="err<: $err ? " show" : "":>"><:$err:></span>
    <span class="msg<: $msg ? " show" : "":>"><:$msg:></span>
       
    <main>
      : include $op.tmpl( $app_path, 'welcome' )
    </main>
  </body>
</html>
